<script>
  const input = document.getElementById('public-image-input') as HTMLInputElement;
  const previewArea = document.getElementById('preview-area')!;
  const uploadPrompt = document.getElementById('upload-prompt')!;
  const previewImg = document.getElementById('preview-img') as HTMLImageElement;
  const clearBtn = document.getElementById('clear-img')!;
  const detectBtn = document.getElementById('detect-btn') as HTMLButtonElement;
  const detectBtnIcon = document.getElementById('detect-btn-icon')!;
  const detectBtnText = document.getElementById('detect-btn-text')!;
  const loadingState = document.getElementById('loading-state')!;
  const errorState = document.getElementById('error-state')!;
  const errorMessage = document.getElementById('error-message')!;
  const porsiBesarList = document.getElementById('porsi-besar-list')!;
  const porsiKecilList = document.getElementById('porsi-kecil-list')!;
  const matchedMenuName = document.getElementById('matched-menu-name')!;
  const portionMatchInfo = document.getElementById('portion-match-info')!;
  const itemsTbody = document.getElementById('items-tbody')!;
  const backBtn = document.getElementById('back-btn')!;

  let selectedFile: File | null = null;
  let hasResults = false;

  const uploadPanel = document.getElementById('upload-panel')!;
  const resultsPanel = document.getElementById('results-panel')!;

  // Animasi: upload panel menyempit ke kiri, panel hasil terbuka dari kanan
  // gap-8 = 2rem = 32px â†’ dikurangi dari masing-masing panel (16px per sisi)
  function showResults() {
    if (window.innerWidth >= 768) {
      uploadPanel.style.width = 'calc(38% - 1rem)';
      uploadPanel.style.maxWidth = 'calc(38% - 1rem)';
      uploadPanel.style.margin = '0';
      resultsPanel.style.width = 'calc(62% - 1rem)';
      resultsPanel.style.opacity = '1';
      resultsPanel.style.overflow = 'visible';
    } else {
      // Mobile: tetap full width, scroll ke hasil
      resultsPanel.style.width = '100%';
      resultsPanel.style.opacity = '1';
      resultsPanel.style.overflow = 'visible';
      setTimeout(() => resultsPanel.scrollIntoView({ behavior: 'smooth', block: 'start' }), 100);
    }
    hasResults = true;
  }

  // Animasi kembali ke kondisi awal
  function hideResults() {
    uploadPanel.style.width = '100%';
    uploadPanel.style.maxWidth = '42rem';
    uploadPanel.style.margin = '0 auto';
    resultsPanel.style.width = '0';
    resultsPanel.style.opacity = '0';
    resultsPanel.style.overflow = 'hidden';
    hasResults = false;
  }

  function showPreview(file: File) {
    selectedFile = file;
    previewImg.src = URL.createObjectURL(file);
    uploadPrompt.classList.add('hidden');
    previewArea.classList.remove('hidden');
    detectBtn.disabled = false;
    errorState.classList.add('hidden');
    if (hasResults) hideResults();
  }

  function clearImage() {
    selectedFile = null;
    previewImg.src = '';
    previewArea.classList.add('hidden');
    uploadPrompt.classList.remove('hidden');
    detectBtn.disabled = true;
    errorState.classList.add('hidden');
    input.value = '';
    hideResults();
  }

  input.addEventListener('change', () => {
    if (input.files?.[0]) showPreview(input.files[0]);
  });

  clearBtn.addEventListener('click', clearImage);
  backBtn.addEventListener('click', hideResults);

  // Drag & drop
  const dropZone = document.getElementById('drop-zone')!;
  dropZone.addEventListener('dragover', (e) => { e.preventDefault(); dropZone.classList.add('border-brand-400'); });
  dropZone.addEventListener('dragleave', () => { dropZone.classList.remove('border-brand-400'); });
  dropZone.addEventListener('drop', (e) => {
    e.preventDefault();
    dropZone.classList.remove('border-brand-400');
    const file = e.dataTransfer?.files?.[0];
    if (file && file.type.startsWith('image/')) showPreview(file);
  });

  detectBtn.addEventListener('click', async () => {
    if (!selectedFile) return;

    detectBtn.disabled = true;
    detectBtnIcon.innerHTML = '<svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v4l3-3-3-3v4a8 8 0 00-8 8h4l-3 3-3-3h4z"/></svg>';
    detectBtnText.textContent = 'Mendeteksi...';
    loadingState.classList.remove('hidden');
    errorState.classList.add('hidden');

    try {
      const formData = new FormData();
      formData.append('image', selectedFile);

      const jsonRes = await fetch('/api/detect', { method: 'POST', body: formData });
      if (!jsonRes.ok) throw new Error(`Server error: ${jsonRes.status}`);
      const data = await jsonRes.json();

      if (!data.success) throw new Error(data.error ?? 'Detection failed');

      // â”€â”€â”€ Merge duplicate items â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
      type RawItem = { food_name: string; confidence: number; estimated_weight_gram: number; calories: number; protein: number; carbohydrates: number; fat: number; fiber: number; };
      const rawItems: RawItem[] = data.nutrition_items ?? [];
      interface MergedItem extends RawItem { qty: number; }
      const mergedMap = new Map<string, MergedItem>();
      for (const item of rawItems) {
        const key = item.food_name.toLowerCase();
        if (mergedMap.has(key)) {
          const m = mergedMap.get(key)!;
          m.qty += 1;
          m.confidence = (m.confidence * (m.qty - 1) + item.confidence) / m.qty; // running avg
          m.estimated_weight_gram += item.estimated_weight_gram;
          m.calories += item.calories;
          m.protein += item.protein;
          m.carbohydrates += item.carbohydrates;
          m.fat += item.fat;
          m.fiber += item.fiber;
        } else {
          mergedMap.set(key, { ...item, qty: 1 });
        }
      }
      const mergedItems = Array.from(mergedMap.values());

      // â”€â”€â”€ Render Estimasi Nilai Gizi â€” Porsi Besar vs Porsi Kecil â”€â”€â”€â”€â”€â”€â”€â”€
      const n = data.nutrition_totals ?? { calories: 0, protein: 0, carbohydrates: 0, fat: 0, fiber: 0 };
      const menu = data.matched_daily_menu;
      const nutrientsDef = [
        { icon: 'ðŸ”¥', label: 'Kalori', key: 'calories', unit: 'kkal', color: 'orange' },
        { icon: 'ðŸ’ª', label: 'Protein', key: 'protein', unit: 'g', color: 'blue' },
        { icon: 'ðŸŒ¾', label: 'Karbo', key: 'carbohydrates', unit: 'g', color: 'amber' },
        { icon: 'ðŸ«’', label: 'Lemak', key: 'fat', unit: 'g', color: 'emerald' },
        { icon: 'ðŸ¥¬', label: 'Serat', key: 'fiber', unit: 'g', color: 'teal' },
      ];

      function renderPortionNutrients(portion: any, totals: any): string {
        return nutrientsDef.map(nd => {
          const ref = portion?.[nd.key] ?? 0;
          const est = totals[nd.key] ?? 0;
          const ratio = ref > 0 ? (est / ref) * 100 : 0;
          const pct = Math.min(ratio, 100);
          const barColor = ratio > 120 ? 'bg-rose-400' : ratio >= 80 ? 'bg-emerald-400' : 'bg-amber-400';
          return `
            <div class="flex items-center gap-2">
              <span class="text-xs">${nd.icon}</span>
              <span class="text-[11px] font-medium text-surface-500 w-12 shrink-0">${nd.label}</span>
              <div class="flex-1 h-1.5 bg-surface-100 rounded-full overflow-hidden">
                <div class="${barColor} h-full rounded-full transition-all duration-500" style="width:${pct.toFixed(0)}%"></div>
              </div>
              <span class="text-[11px] font-bold text-surface-700 w-14 text-right">${ref} <span class="font-normal text-surface-400">${nd.unit}</span></span>
            </div>`;
        }).join('');
      }

      if (menu) {
        matchedMenuName.textContent = menu.menuName;
        portionMatchInfo.textContent = `Kecocokan ${Math.round(menu.matchScore * 100)}%`;
        porsiBesarList.innerHTML = renderPortionNutrients(menu.porsi_besar, n);
        porsiKecilList.innerHTML = renderPortionNutrients(menu.porsi_kecil, n);
      } else {
        matchedMenuName.textContent = 'Menu tidak dikenali dari database';
        portionMatchInfo.textContent = '';
        // Show estimated totals only (no reference comparison)
        const summaryHtml = nutrientsDef.map(nd => `
          <div class="flex items-center justify-between py-1">
            <div class="flex items-center gap-2">
              <span class="text-xs">${nd.icon}</span>
              <span class="text-[11px] font-medium text-surface-500">${nd.label}</span>
            </div>
            <span class="text-[11px] font-bold text-surface-700">${parseFloat((n[nd.key] ?? 0).toFixed(1))} <span class="font-normal text-surface-400">${nd.unit}</span></span>
          </div>
        `).join('');
        porsiBesarList.innerHTML = summaryHtml;
        porsiKecilList.innerHTML = summaryHtml;
      }

      // â”€â”€â”€ Render merged items table â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
      if (mergedItems.length > 0) {
        itemsTbody.innerHTML = mergedItems.map(item => `
          <tr class="hover:bg-surface-50 transition-colors">
            <td class="px-4 py-3 font-semibold text-surface-900 capitalize">${item.food_name}</td>
            <td class="px-4 py-3 text-right text-surface-500">${parseFloat(Number(item.estimated_weight_gram).toFixed(2))}g</td>
            <td class="px-4 py-3 text-right text-surface-500">${parseFloat(Number(item.calories).toFixed(2))}</td>
            <td class="px-4 py-3 text-right text-surface-500">${parseFloat(Number(item.protein).toFixed(2))}g</td>
            <td class="px-4 py-3 text-right text-surface-500">${parseFloat(Number(item.carbohydrates).toFixed(2))}g</td>
            <td class="px-4 py-3 text-right text-surface-500">${parseFloat(Number(item.fat).toFixed(2))}g</td>
            <td class="px-4 py-3 text-right text-surface-500">${parseFloat(Number(item.fiber).toFixed(2))}g</td>
          </tr>
        `).join('');
      } else {
        itemsTbody.innerHTML = `<tr><td colspan="7" class="px-4 py-8 text-center text-surface-400">Tidak ada item terdeteksi.</td></tr>`;
      }

      // Animasi: upload menyempit, panel hasil terbuka
      showResults();
    } catch (err: unknown) {
      errorMessage.textContent = err instanceof Error ? err.message : 'Terjadi kesalahan. Pastikan API berjalan.';
      errorState.classList.remove('hidden');
    } finally {
      detectBtn.disabled = false;
      detectBtnIcon.innerHTML = '<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"/></svg>';
      detectBtnText.textContent = 'Deteksi Sekarang';
      loadingState.classList.add('hidden');
    }
  });
</script>

